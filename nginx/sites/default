# Redirect all HTTP requests to HTTPS
server {
	listen 80 default_server;
	listen [::]:80 default_server;

        return 302 https://jupyter-dev.lsst.ac.uk;

	root /var/www/html;

	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		try_files $uri $uri/ =404;
	}
}

# Redirect any requests to the old domain
server {
    root /var/www/html;
    index index.html;
    
    server_name jhub-pilot.metagrid.xyz; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/jhub-pilot.metagrid.xyz/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/jhub-pilot.metagrid.xyz/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    rewrite ^/(.*)$ https://jupyter-dev.lsst.ac.uk/$1 redirect;
}

server {
	root /var/www/html;
	index index.html index.htm index.nginx-debian.html;

	server_name jupyter-dev.lsst.ac.uk; # managed by Certbot

        location ^~ /static/ {
		alias /var/www/html/static/;
        }

	location /dev/ {
		proxy_pass http://192.168.140.11:30080/dev/;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header Host $http_host;
		proxy_http_version 1.1;
		proxy_redirect off;
		proxy_buffering off;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		proxy_read_timeout 86400;
	}

	location / {
		proxy_pass http://192.168.140.18:30080/;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header Host $http_host;
		proxy_http_version 1.1;
		proxy_redirect off;
		proxy_buffering off;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		proxy_read_timeout 86400;
	}

	listen 443 ssl; # managed by Certbot
	ssl_certificate /etc/letsencrypt/live/jhub-pilot.metagrid.xyz/fullchain.pem; # managed by Certbot
	ssl_certificate_key /etc/letsencrypt/live/jhub-pilot.metagrid.xyz/privkey.pem; # managed by Certbot
	include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
	ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

